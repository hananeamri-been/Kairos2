<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/habit_title"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:labelFor="@id/inputTitle"/>

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/habit_title"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="16sp"
            android:inputType="textCapSentences"
            android:autofillHints="habit"
            android:importantForAutofill="yes" />

        <TextView
            android:id="@+id/labelFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frequency"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <!-- 7 jours -->
        <LinearLayout
            android:id="@+id/daysList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <CheckBox android:id="@+id/ch0" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/monday"    android:textColor="#000000"/>
            <CheckBox android:id="@+id/ch1" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/tuesday"   android:textColor="#000000"/>
            <CheckBox android:id="@+id/ch2" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/wednesday" android:textColor="#000000"/>
            <CheckBox android:id="@+id/ch3" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/thursday"  android:textColor="#000000"/>
            <CheckBox android:id="@+id/ch4" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/friday"    android:textColor="#000000"/>
            <CheckBox android:id="@+id/ch5" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/saturday"  android:textColor="#000000"/>
            <CheckBox android:id="@+id/ch6" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="@string/sunday"    android:textColor="#000000"/>
        </LinearLayout>

        <!-- 2) Icône SAVE : entière, petite -->
        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/save"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:contentDescription="@string/save" />
    </LinearLayout>
</ScrollView>
