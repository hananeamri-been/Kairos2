<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Couleur de fond semi-transparente (adapte si tu veux) -->
    <solid android:color="#33FFFFFF" />
    <!-- Coins arrondis -->
    <corners android:radius="16dp" />
    <!-- Légère bordure -->
    <stroke
        android:width="1dp"
        android:color="#22FFFFFF" />
    <!-- Un peu de padding interne pour l’esthétique -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
