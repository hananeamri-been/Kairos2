<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¹ Titre -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Gym Session"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- ðŸ”¹ SÃ©lecteur de groupe musculaire -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select muscle group"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- ðŸ”¹ Barre de recherche -->
        <EditText
            android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search exercise..."
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <!-- ðŸ”¹ Liste des exercices dispo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available exercises"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:id="@+id/containerExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle"/>

        <!-- ðŸ”¹ Liste des exercices sÃ©lectionnÃ©s -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected exercises"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/containerSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- ðŸ”¹ Bouton save -->
        <ImageButton
            android:id="@+id/btnSaveSession"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/save"
            android:padding="6dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Save session"/>
    </LinearLayout>
</ScrollView>
